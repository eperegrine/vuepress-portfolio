.home .hero img
  max-width 450px!important

.center-text
  text-align: center

.nav-item {
  display: inline-block;
  color: #555;
  text-decoration: none;
  font-size: 2rem;
  margin: 2rem;
}

.nav-item:before {
  content: "";
  position: absolute;
  width: 100%;
  height: 1px;
  bottom: 0;
  left: 0;
  background-color: $accentColor;
  visibility: hidden;
  -webkit-transform: scaleX(0);
  transform: scaleX(0);
  -webkit-transition: all 0.3s ease-in-out 0s;
  transition: all 0.3s ease-in-out 0s;
}
.nav-item:hover:before {
  color: $accentColor;
  visibility: visible;
  -webkit-transform: scaleX(1);
  transform: scaleX(1);
}

.nav-item,
.nav-item > a {
  position: relative;
  color: #555;
  text-decoration: none;
  -webkit-transition: all 0.3s ease-in-out 0s;
  transition: all 0.3s ease-in-out 0s;
}
.nav-item:hover > a {
  color: $accentColor;
}

.home-link {
  color: #555 !important;
  &:hover {
    color: $accentColor !important;
  }
}

.router-link-active {
  color: $accentColor !important
  &.home-link {
    color: #555 !important;
  }
}

